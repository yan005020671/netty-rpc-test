<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.tstd2.nettyrpc1.core"/>
    <context:property-placeholder location="classpath:rpc-server.properties"/>

    <bean id="rpcbean" class="com.tstd2.nettyrpc1.model.MessageKeyVal">
        <property name="messageKeyVal">
            <map>
                <entry key="com.tstd2.nettyrpc1.test.Calculate">
                    <ref bean="calc"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="calc" class="com.tstd2.nettyrpc1.test.CalculateImpl"/>

    <bean id="rpcServer" class="com.tstd2.nettyrpc1.core.server.MessageRecvExecutor">
        <constructor-arg name="serverAddress" value="${rpc.server.addr}"/>
        <constructor-arg name="serializeProtocol" value="HESSIANSERIALIZE"/>
    </bean>
</beans>